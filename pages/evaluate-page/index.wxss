
.myOrder-list{
  background-color:#f5f5f5;
  padding: 5px 0;
}
.myOrder-list .list-nav{
  display: flex;
  font-size: 14px;
  background-color: #fff;
  padding: 10px 20px;
}
.list-nav .dainpu{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.dainpu image{
  width: 100%;
  height: 100%;
}
.list-detail{
  font-size: 14px;
  background-color: #fff;
  display: flex;
  padding-bottom: 10px;
}
.list-detail .detail-img{
  width: 100px;
  height: 100px;
  flex: 1;
  margin-left: 20px;
}
.detail-img image{
  width: 100%;
  height: 100%;
}
.detail-introduce{
  flex: 2;
  margin-left: 10px;
}
.detail-introduce .introduce-money{
  color:#d62727;
  margin-top: 40px;
}
.introduce-money .num{
  float: right;
  margin-right: 20px;
  color:#999;
}
.detail-introduce .introduce-money .number{
  font-size: 18px;
  display: inline-block;
}
.evaluate{
  position: relative;
}
.evaluate textarea{
  width: 95%;
  height: 200px;
  font-size: 14px;
  color:#999;
  background-color: #fff;
  margin: 0 10px;
  padding: 10px;
  box-sizing: border-box;
}
.evaluate .add-pic{
  width: 100px;
  height: 100px;
  border:1px solid #ccc;
  position: absolute;
  bottom: 20px;
  left: 40px;
  color:#999;
  font-size: 15px;
}
.add-pic .pic{
  position: absolute;
  bottom: 15px;
  left: 20%;
}
.add-pic .xiangji{
  width: 30px;
  height: 30px;
  position: absolute;
  top:30px;
  left: 35%;
}
.xiangji image{
  width: 100%;
  height: 100%;
}
.submit{
  width: 80%;
  height: 30px;
  background-color: #d62727;
  color:#fff;
  text-align: center;
  margin: 30px auto;
  padding: 3px 10px;
  border-radius: 6px;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
Page{
  background-color:#f5f5f5;
}