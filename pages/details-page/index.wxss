.username{
  border-top:1px solid #e6e6e6;
  padding-top: 5px;
  padding-left: 15px;
  font-size: 14px;
}
.username .username-img{
  width: 40px;
  height: 40px;
  float: left;
  margin-left: 8px;
  margin-right: 5px;
}
.username .username-img image{
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
.username .fangzhu{
  font-size: 12px;
  color:#aaa;
}
.detail-shop .detail-img image{
  width: 100%;
  height: 180px;
  margin-top: 5px;
}
.detail-shop .detail-content{
  padding: 5px 15px;
  font-size: 14px;
}
.detail-content .introduce{
  border:1px solid #000;
  margin-top: 5px;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.detail-content .introduce view{
  float: left;
  width: 50%;
   padding: 5px;
   box-sizing: border-box;
}
.detail-content .introduce view:nth-child(2n){
  float: right;
}
.detail-content .introduce view:nth-child(-n+4){
   border-bottom: 1px solid #000;
}
.detail-content .text{
  font-size: 12px;
  color:#666;
  margin: 8px 0;
}
.footer{
  background-color: #fff;
}
.footer .footer-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  font-size: 14px;
}
.footer .footer-comment{
  background-color: #fff;
  width: 100%;
  height: 40px;
}
.footer .footer-comment .comment{
  /* border:1px solid #aaa; */
  background-color: #fff;
  width: 100%;
  height: 40px;
  font-size: 14px;
  position: fixed;
  bottom: 40px;
  left: 0;
  line-height: 40px;
  text-indent: 20px;
  color:#aaa;
}
.footer .footer-nav{
  width: 100%;
}
.footer .footer-nav view{
  float: left;
}
.footer .footer-nav .minmun{
  width: 50%;
  height: 100%;
  border-top:1px solid #e6e6e6;
  color:#999;
  background-color:#fff;
  line-height: 40px;
  text-indent: 20px;
}
.footer .footer-nav .add{
  width: 10%;
