.username{
  border-top:1px solid #aaa;
  padding-top: 5px;
  padding-left: 15px;
  font-size: 14px;
}
.username .fangzhu{
  font-size: 12px;
  color:#aaa;
}
.detail-shop .detail-content{
  padding: 5px 15px;
  font-size: 14px;
}
.detail-content .introduce{
  border:1px solid #000;
  margin-top: 5px;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.detail-content .introduce view{
  float: left;
  width: 50%;
   padding: 5px;
   box-sizing: border-box;
}
.detail-content .introduce view:nth-child(2n){
  float: right;
}
.detail-content .introduce view:nth-child(-n+4){
   border-bottom: 1px solid #000;
}
.detail-content .text{
  font-size: 12px;
  color:#666;
  margin: 5px 0;
}
