.my-attention {
  border-top: 1px solid #e6e6e6;
}

.my-attention .attention-user {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding: 10px 10px;
  border-bottom: 1px solid #e6e6e6;
}

.attention-user .user-img {
  width: 50px;
  height: 50px;
}

.user-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-name {
  flex: 2;
  margin-left: 5px;
}

.user-name .introduce {
  font-size: 10px;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-top: 5px;
}

.cancle {
  flex: 1;
}
.cancle .cancle-content{
  float: right;
  width: 60px;
  background-color: #d42825;
  color:#fff;
  border-radius: 8px;
  padding: 2px;
  margin-top: 10px;
  align-content: center;
  justify-content: center;
}
