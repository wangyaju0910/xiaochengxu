.username{
  border-top:1px solid #aaa;
  padding-top: 5px;
  padding-left: 15px;
  font-size: 14px;
}
.username .username-img{
  width: 40px;
  height: 40px;
  margin-left: 8px;
  margin-right: 5px;
  float: left;
}
.username .username-img image{
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
.username .fangzhu{
  font-size: 12px;
  background-color: #d62727;
  display: inline;
  padding: 2px 5px;
  border-radius: 5px;
  color:#fff;
}
.name-user{
  float: left;
  width: 50%
}
.now-money{
  float: right;
  margin-right: 20px;
}
.now-money .bottom-money{
  color:#d32827;
  font-weight: 700;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.check-shop{
  border-top:1px solid #aaa;
  font-size: 14px;
  margin-top: 5px;
}
.check-shop .checked{
  float: right;
  color:#888;
  margin: 8px 0;
  margin-right: 10px;
}
.detail-shop .detail-img image{
  width: 100%;
  margin-top: 5px;
}
.detail-shop .detail-content{
  padding: 5px 15px;
  font-size: 14px;
}
.detail-content .introduce{
  border:1px solid #000;
  margin-top: 5px;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.detail-content .introduce view{
  float: left;
  width: 50%;
   padding: 5px;
   box-sizing: border-box;
}
.detail-content .introduce view:nth-child(2n){
  float: right;
}
.detail-content .introduce view:nth-child(-n+4){
   border-bottom: 1px solid #000;
}
.detail-content .text{
  font-size: 12px;
  color:#666;
  margin: 5px 0;
}
.footer{
  background-color: #fff;
}
.footer .footer-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
  font-size: 14px;
}
.footer .footer-comment{
  background-color: #fff;
  width: 100%;
  height: 40px;
}
.footer .footer-comment .comment{
  /* border:1px solid #aaa; */
  background-color: #fff;
  width: 100%;
  height: 40px;
  font-size: 14px;
  position: fixed;
  bottom: 40px;
  left: 0;
  line-height: 40px;
  text-indent: 20px;
  color:#aaa;
}
.footer .footer-nav{
  width: 100%;
}
.footer .footer-nav view{
  float: left;
}
.footer .footer-nav .minmun{
  width: 50%;
  height: 100%;
  border-top:1px solid #aaa;
  color:#999;
  background-color:#fff;
  line-height: 40px;
  text-indent: 20px;
}
.footer .footer-nav .add{
  width: 10%;
  height: 100%;
  background-color: #000;
  color:#fff;
  line-height: 40px;
  text-align: center;
}
.footer .footer-nav .buy-now{
  width: 40%;
  height: 100%;
  background-color:#d62727;
  color:#fff;
  line-height: 40px;
  text-align: center;
}
.img-show{
  background-color: #f9f8ef;
  padding: 20px 5px;
}
.img-show image{
  width: 100%;
}
.mask-laye{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.8)
}
.mask-laye::after{
  content:"左滑商品详情";
  width:20px;
  height: 110px;
  color:#666;
  position: absolute;
  top:150px;
  right: 0;
  background-color: #353535;
  padding: 6px 8px;
  font-size: 14px;
}