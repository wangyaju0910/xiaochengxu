.username {
  border-top: 1px solid #e6e6e6;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 15px;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
  /* float: left; */
}

.username .user-log {
  width: 140px;
  display: inline-block;
}

.username .username-img {
  width: 40px;
  height: 40px;
  float: left;
  margin-left: 8px;
  margin-right: 5px;
}

.username .username-img image {
  width: 100%;
  height: 100%;
  border-radius: 20px;
}

.username .sign-in {
  float: right;
  margin-right: 20px;
}

.sign-in .rili {
  width: 30px;
  height: 30px;
  margin-left: 10px;
}

.sign-in .rili image {
  width: 100%;
  height: 100%;
}

.sign-in .tag-sign {
  background-color: #d62727;
  color: #fff;
  border-radius: 10px;
  line-height: 0;
  padding: 10px 10px;
}

.my-order .order-nav {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  padding: 10px 20px;
  border-top: 1px solid #f0f0f0;
}

.order-nav .all-order {
  color: #999;
}

.order-set {
  background-color: #f5f5f5;
  font-size: 14px;
  color: #666;
  padding: 5px 0;
}

.order-list {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  padding: 10px 0;
}
.order-list .fukaun::after{
  content:"1";
  width: 13px;
  height:13px;
  font-size: 10px;
  background-color:#d62727;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  top:130px;
  left: 50px;
  color:#fff;
}
.order-list .load-pay {
  flex: 1;
  text-align: center;
}

.order-list .load-pay .images {
  width: 20px;
  height: 20px;
  margin-left: 28px;
}

.images image {
  width: 100%;
  height: 100%;
  margin-left: 8px;
}

.order-set .set-list {
  border-bottom: 1px solid #f5f5f5;
  padding: 10px 10px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.set-list .icon {
  color: #bcbcbc;
}

.order-set .set-list:nth-last-child(1) {
  border: none;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
