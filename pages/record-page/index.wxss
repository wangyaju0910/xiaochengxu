Page{
  background-color:#f5f5f5;
}
.record-nav{
  background-color: #fff;
  display: flex;
  font-size: 14px;
  color: #666;
  text-align: center;
  justify-content: space-between;
  padding: 0 30px;
  border-top: 1px solid #f5f5f5;
}
.record-nav view{
  display: flex;
  align-items: center;
}
.record-nav .record-now{
  color:#dd6667;
  border-bottom: 3px solid #dd6667;
  padding: 10px 0;
}
.remind-list{
  margin-top: 5px;
}
.remind-list .list{
  display: flex;
  background-color: #fff;
}
.remind-list .list-img{
  width: 100px;
  height: 110px;
  float: left;
  margin-left: 10px;
  margin-top: 5px;
  padding: 5px 0;
  position: relative;
}
.list-img image{
  width: 100%;
  height: 100%;
}
.list-img .chujia{
  position: absolute;
  bottom: 5px;
  right: 0;
  font-size: 10px;
  color:#fff;
  background-color: rgba(0, 0, 0, .6);
  padding: 5px;
}
.list-content{
  float: left;
  padding: 10px 0;
  font-size: 14px;
  margin-left: 10px;
}
.list-content .list-user{
  color:#999;
  margin: 5px 0;
}
.list-content .list-money{
  display: inline-block;
  color:#dd6667;
}
.list-content .list-time{
  color:#dd6667;
  float: left;
}
.list-content .now{
  color:#dd6667;
  float: right;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}