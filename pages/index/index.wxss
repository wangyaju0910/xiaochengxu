.inputBox {
  border-top: 1px solid rgb(184, 184, 184);
}

.inputBox .input {
  width: 90%;
  height: 30px;
  border: 1px solid rgb(184, 184, 184);
  border-radius: 8px;
  margin: 0 auto;
  margin-top: 10px;
  font-size: 14px;
  padding-left: 20px;
  color: #aaa;
  line-height: 30px;
}

.advance {
  width: 95%;
  border: 1px solid #999;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  border-radius: 8px;
  margin: 5px auto;
  align-items: center;
  padding: 5px;
  box-sizing: border-box;
}

.advance .user .user-img {
  width: 30px;
  height: 30px;
}

.user-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.advance .auction-notice{
  height: 30px;
  width: 30px;
  margin-left: 10px;
  color:#999;
}
.advance .time,
.advance .user,
.advance .theme{
  margin-left: -15px;
}
.advance .time{
  text-align: center;
}
.advance .time .data{
  color:#999;
  font-size: 8px;
}
.advance-shop {
  background-color: #f5f5f5;
  margin-top: 10px;
  padding: 10px 5px;
}

.advance-shop .advance-img {
  background-color: #fff;
  position: relative;
}

.advance-shop image {
  width: 100%;
}

.advance-shop .advance-content {
  background-color: #fff;
  padding: 0 15px;
  font-size: 16px;
}

.advance-content .finish {
  font-size: 14px;
  color: #aaa;
}

.proceed {
  position: absolute;
  bottom: 5px;
  left: 0;
  color: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 10px 5px;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.6);
}

.proceed view:nth-child(1) {
  flex: 2;
}

.proceed view:nth-child(2) {
  flex: 1;
  text-align: center;
}
