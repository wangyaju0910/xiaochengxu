Page{
  background-color: #f5f5f5;
  padding: 10px;
}
.opinion{
  display: flex;
  width: 88%;
  background-color: #fff;
  padding: 20px 10px;
  font-size: 12px;
  border-radius: 8px;
}
.opinion .opinion-nav{
  flex: 4;
  display: flex;
}
.opinion .kefu{
  flex: 1;
}
.opinion .opinion-img{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.opinion-img image{
  width: 100%;
  height: 100%;
}
.question{
  margin-top:5px;
  position: relative;
}
.question textarea{
  width: 95%;
  height: 200px;
  background-color: #fff;
  border-radius: 8px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 12px;
}
.question-pic{
  width: 100px;
  height: 100px;
  border:1px solid #dddddd;
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.question-pic .upload-pic{
  width: 40px;
  height: 40px;
  position: absolute;
  top:20px;
  left: 30%;
}
.upload-pic image{
  width: 100%;
  height: 100%;
}
.question-pic .add-pic{
  position: absolute;
  bottom: 10px;
  left: 28%;
  font-size: 12px;
  color:#b2b2b2;
}
.tel{
  width: 90%;
  height: 20px;
  background-color: #fff;
  margin-top: 5px;
  display: flex;
  padding: 10px 8px;
  font-size: 12px;
}
.tel view{
  flex: 1;
  height: 23px;
  text-align: center;
  line-height: 23px;
}
.tel input{
  flex: 3;
  width: 100%;
  margin-left: -5px;
  margin-top: -3px;
}
.baocun{
  width: 90%;
  height: 30px;
  background-color:#d62727;
  color: #fff;
  text-align: center;
  line-height: 30px;
  border-radius: 8px;
  margin-top: 30px;
}