.remind-img{
  position: relative;
}
.remind-img image{
  width: 100%;
}
.now-auction{
  position: absolute;
  bottom: 5px;
  left: 0;
  color:#fff;
  width: 100%;
  text-align: center;
  font-size: 14px;
  padding: 10px 0;
  background-color: rgba(0,0,0,.5);
}
.now-auction view:nth-child(1){
  float: left;
  width: 49%;
  border-right: 1px solid #fff;
}
.now-auction view:nth-child(2){
  float: right;
  width: 50%;
}
.remind-list .list{
  display: flex;
  justify-content: space-between;
}
.remind-list .list-img{
  flex: 1;
  margin-left: 5px;
}
.remind-list .list-img image{
  width: 100%;
  height: 100%;
}
.remind-list .list-content{
  flex: 2;
  margin: 5px;
  font-size: 12px;
}
.list-content .list-user{
  color:#999;
  margin: 5px 0;
}

.list-content .list-money{
  display: inline-block;
  color:red;
  margin: 5px 0;
}